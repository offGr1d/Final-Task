public class Sandwich {
   // Private Variables
   private String bread;
   private String filling;
   private int caloriesPerSlice;

   // Constructor
   public Sandwich(String bread, String filling, int caloriesPerSlice) {
       this.bread = bread;
       this.filling = filling;
       this.caloriesPerSlice = caloriesPerSlice;
    }

   // Getters to retrieve the values of bread and filling
   public String getBread() {
       return bread;
   }

   public String getFilling() {
       return filling;
    }

   public int getTotalCalories() {
       return caloriesPerSlice ;
   }

   // Display
   public void displaySandwichData() {
       System.out.println("Bread: " + bread);
       System.out.println("Filling: " + filling);
       System.out.println("Total Calories: " + getTotalCalories());
       System.out.println();
   }
}
